<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalCenter">
 Add Ingredient
</button>
<!-- Modal -->
<div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">

    <div class="modal-content">

      <%= simple_form_for [@cocktail, @dose]  do |f| %>

        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalCenterTitle">Add your ingredient</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>

        <div class="modal-body">
          <%= image_tag("https://image.freepik.com/free-photo/handsome-bartender-making-drinking-cocktails-counter_1303-19777.jpg", class: "img-create-modal") %>
          <%=f.input :description, :label=>"Dose in cl" %>
          <%= f.association :ingredient %>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%=f.submit%>
        </div>

      <%end%>
    </div>

  </div>


</div>

